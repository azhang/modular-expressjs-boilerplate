head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
  meta(name='viewport', content='width=device-width,initial-scale=1')

  //-title= appName+' | '+title
  title= appName
  meta(http-equiv='Content-type', content='text/html;charset=UTF-8')
  meta(name="keywords", content="innovation, open innovation, ideas")
  meta(name="description", content="")

  //- Favicons
  link(rel="shortcut icon", type="image/x-icon", href=cdnUrl+"/common/images/favicon.ico")
  link(href=cdnUrl+"/common/images/apple-touch-icon.png", rel="apple-touch-icon")
  link(href=cdnUrl+"/common/images/apple-touch-icon-72x72.png", rel="apple-touch-icon", sizes="72x72")
  link(href=cdnUrl+"/common/images/apple-touch-icon-114x114.png", rel="apple-touch-icon", sizes="114x114")
  link(href=cdnUrl+"/common/images/apple-touch-icon-144x144.png", rel="apple-touch-icon", sizes="144x144")
  
  // OpenGraph meta tags
  if meta
    each content, property in meta
      meta(property=property, content=content)

  //-
    meta(property='fb:app_id', content='APP_ID')
    meta(property='og:title', content='#{appName} - #{title}')
    meta(property='og:description', content='MEAN - A Modern Stack: MongoDB, ExpressJS, AngularJS, NodeJS. (BONUS: Passport User Support).')
    meta(property='og:type', content='website')
    meta(property='og:url', content='APP_URL')
    meta(property='og:image', content='APP_LOGO')
    meta(property='og:site_name', content='MEAN - A Modern Stack')
    meta(property='fb:admins', content='APP_ADMIN')

  //if lt IE 9
    script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')


